<script>
// Breathing exercise functionality
document.addEventListener('DOMContentLoaded', function() {
    const startBtn = document.getElementById('start-breathing');
    const stopBtn = document.getElementById('stop-breathing');
    const breathingCircle = document.getElementById('breathing-circle');
    const breathInstruction = document.getElementById('breath-instruction');
    const breathCount = document.getElementById('breath-count');
    const instructions = document.getElementById('breathing-instructions');
    const progress = document.getElementById('breathing-progress');
    const progressBar = document.getElementById('progress-bar');
    const currentCycle = document.getElementById('current-cycle');
    const totalCycles = document.getElementById('total-cycles');

    let breathingInterval;
    let isBreathing = false;
    let currentPhase = 0; // 0: inhale, 1: hold, 2: exhale
    let cycleCount = 0;
    let phaseTime = 0;

    const phases = [
        { name: 'Inhale', duration: 4, instruction: 'Breathe In', color: 'from-primary to-accent' },
        { name: 'Hold', duration: 7, instruction: 'Hold', color: 'from-accent to-secondary' },
        { name: 'Exhale', duration: 8, instruction: 'Breathe Out', color: 'from-secondary to-primary' }
    ];

    function startBreathingExercise() {
        isBreathing = true;
        cycleCount = 0;
        currentPhase = 0;
        phaseTime = 0;
        
        startBtn.classList.add('hidden');
        stopBtn.classList.remove('hidden');
        progress.classList.remove('hidden');
        instructions.textContent = 'Follow the circle and instructions to control your breathing';
        
        breathingInterval = setInterval(updateBreathing, 1000);
        updateBreathing();
    }

    function stopBreathingExercise() {
        isBreathing = false;
        clearInterval(breathingInterval);
        
        startBtn.classList.remove('hidden');
        stopBtn.classList.add('hidden');
        progress.classList.add('hidden');
        
        breathInstruction.textContent = 'Breathe';
        breathCount.textContent = 'Press Start';
        instructions.textContent = 'Click start to begin the 4-7-8 breathing technique';
        breathingCircle.className = 'breathing-circle w-48 h-48 mx-auto bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center shadow-lg';
        
        progressBar.style.width = '0%';
        currentCycle.textContent = '1';
    }

    function updateBreathing() {
        if (!isBreathing) return;

        const phase = phases[currentPhase];
        const progress = ((phaseTime + 1) / phase.duration) * 100;
        
        breathInstruction.textContent = phase.instruction;
        breathCount.textContent = `${phaseTime + 1} / ${phase.duration}`;
        
        // Update circle appearance
        breathingCircle.className = `breathing-circle w-48 h-48 mx-auto bg-gradient-to-br ${phase.color} rounded-full flex items-center justify-center shadow-lg`;
        
        phaseTime++;
        
        if (phaseTime >= phase.duration) {
            phaseTime = 0;
            currentPhase++;
            
            if (currentPhase >= phases.length) {
                currentPhase = 0;
                cycleCount++;
                currentCycle.textContent = cycleCount + 1;
                
                // Update overall progress
                const overallProgress = (cycleCount / 4) * 100;
                progressBar.style.width = overallProgress + '%';
                
                if (cycleCount >= 4) {
                    stopBreathingExercise();
                    instructions.innerHTML = '<span class="text-green-600 font-semibold"><i class="fas fa-check-circle mr-2"></i>Great job! You completed the breathing exercise. How do you feel?</span>';
                    return;
                }
            }
        }
    }

    startBtn.addEventListener('click', startBreathingExercise);
    stopBtn.addEventListener('click', stopBreathingExercise);
});
</script>