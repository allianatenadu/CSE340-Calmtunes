<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="text-3xl font-bold text-textMain">Join CalmTunes</h2>
            <p class="mt-2 text-gray-600">Create your free account and start your wellness journey</p>
        </div>
        
        <div class="card">
            <form action="/signup" method="POST" class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-textMain mb-2">
                        Full Name
                    </label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        required 
                        class="form-input"
                        placeholder="Your full name"
                    >
                </div>
                
                <div>
                    <label for="email" class="block text-sm font-medium text-textMain mb-2">
                        Email Address
                    </label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        required 
                        class="form-input"
                        placeholder="your@email.com"
                    >
                </div>

                <!-- Role Selection -->
                <div>
                    <label class="block text-sm font-medium text-textMain mb-3">
                        Account Type
                    </label>
                    <div class="space-y-3">
                        <div class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                            <input 
                                id="role-patient" 
                                name="role" 
                                type="radio" 
                                value="patient"
                                checked
                                class="h-4 w-4 text-primary focus:ring-primary border-gray-300"
                            >
                            <div class="ml-3 flex-1">
                                <label for="role-patient" class="block text-sm font-medium text-textMain cursor-pointer">
                                    <i class="fas fa-user-circle text-primary mr-2"></i>
                                    Patient
                                </label>
                                <p class="text-xs text-gray-500 mt-1">I'm looking for mental health support and therapy resources</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                            <input 
                                id="role-therapist" 
                                name="role" 
                                type="radio" 
                                value="therapist"
                                class="h-4 w-4 text-primary focus:ring-primary border-gray-300"
                            >
                            <div class="ml-3 flex-1">
                                <label for="role-therapist" class="block text-sm font-medium text-textMain cursor-pointer">
                                    <i class="fas fa-user-md text-primary mr-2"></i>
                                    Therapist
                                </label>
                                <p class="text-xs text-gray-500 mt-1">I'm a licensed therapist looking to connect with patients</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div>
                    <label for="password" class="block text-sm font-medium text-textMain mb-2">
                        Password
                    </label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        required 
                        class="form-input"
                        placeholder="Create a strong password"
                        minlength="8"
                    >
                    <p class="text-xs text-gray-500 mt-1">Minimum 8 characters</p>
                </div>
                
                <div>
                    <label for="confirmPassword" class="block text-sm font-medium text-textMain mb-2">
                        Confirm Password
                    </label>
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        required 
                        class="form-input"
                        placeholder="Confirm your password"
                    >
                </div>
                
                <div class="flex items-center">
                    <input 
                        id="terms" 
                        name="terms" 
                        type="checkbox" 
                        required
                        class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded"
                    >
                    <label for="terms" class="ml-2 block text-sm text-gray-600">
                        I agree to the <a href="#" class="text-primary hover:text-primary/80">Terms of Service</a> 
                        and <a href="#" class="text-primary hover:text-primary/80">Privacy Policy</a>
                    </label>
                </div>
                
                <button type="submit" class="w-full btn-primary py-3 text-lg">
                    Create Account
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Already have an account? 
                    <a href="/login" class="font-medium text-primary hover:text-primary/80">Sign in here</a>
                </p>
            </div>
        </div>
        
        <!-- Role-specific Benefits -->
        <div id="patient-benefits" class="bg-blue-50 rounded-lg p-6 role-benefits">
            <h3 class="font-semibold text-textMain mb-3 flex items-center">
                <i class="fas fa-heart text-primary mr-2"></i>
                Patient Benefits:
            </h3>
            <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Access to therapeutic music playlists
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Digital art therapy tools
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Mood tracking and insights
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Connection to licensed therapists
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    24/7 panic relief resources
                </li>
            </ul>
        </div>

        <div id="therapist-benefits" class="bg-green-50 rounded-lg p-6 role-benefits hidden">
            <h3 class="font-semibold text-textMain mb-3 flex items-center">
                <i class="fas fa-stethoscope text-primary mr-2"></i>
                Therapist Features:
            </h3>
            <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Patient management dashboard
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Access to therapeutic resources
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Patient mood tracking insights
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Professional networking tools
                </li>
                <li class="flex items-center">
                    <i class="fas fa-check text-primary mr-2"></i>
                    Specialized therapist resources
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
// Dynamic benefits display based on role selection
document.addEventListener('DOMContentLoaded', function() {
    const patientRadio = document.getElementById('role-patient');
    const therapistRadio = document.getElementById('role-therapist');
    const patientBenefits = document.getElementById('patient-benefits');
    const therapistBenefits = document.getElementById('therapist-benefits');

    function updateBenefits() {
        if (patientRadio.checked) {
            patientBenefits.classList.remove('hidden');
            therapistBenefits.classList.add('hidden');
        } else if (therapistRadio.checked) {
            patientBenefits.classList.add('hidden');
            therapistBenefits.classList.remove('hidden');
        }
    }

    patientRadio.addEventListener('change', updateBenefits);
    therapistRadio.addEventListener('change', updateBenefits);

    // Password confirmation validation
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');

    function validatePassword() {
        if (password.value !== confirmPassword.value) {
            confirmPassword.setCustomValidity("Passwords don't match");
        } else {
            confirmPassword.setCustomValidity('');
        }
    }

    password.addEventListener('change', validatePassword);
    confirmPassword.addEventListener('keyup', validatePassword);
});
</script>

