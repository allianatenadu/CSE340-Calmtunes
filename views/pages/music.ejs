

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-textMain mb-4">
            ðŸŽµ Therapeutic Music Library
        </h1>
        <p class="text-xl text-gray-600">
            Scientifically curated playlists designed to support your mental wellness journey
        </p>
    </div>

    <!-- Featured Playlist -->
    <div class="gradient-bg text-white rounded-2xl p-8 mb-12">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-2/3 mb-6 md:mb-0">
                <h2 class="text-2xl md:text-3xl font-bold mb-4">Today's Recommendation</h2>
                <h3 class="text-xl font-semibold mb-2">Peaceful Mornings</h3>
                <p class="text-lg opacity-90 mb-4">
                    Start your day with gentle, uplifting melodies designed to promote positive energy and mental clarity.
                </p>
                <div class="flex space-x-4">
                    <button class="bg-white text-primary hover:bg-gray-100 font-bold py-3 px-6 rounded-lg transition-colors duration-200">
                        <i class="fas fa-play mr-2"></i>Play Now
                    </button>
                    <button class="border-2 border-white text-white hover:bg-white hover:text-primary font-bold py-3 px-6 rounded-lg transition-all duration-200">
                        <i class="fas fa-heart mr-2"></i>Add to Favorites
                    </button>
                </div>
            </div>
            <div class="md:w-1/3">
                <img src="https://images.pexels.com/photos/1021876/pexels-photo-1021876.jpeg?auto=compress&cs=tinysrgb&w=400" 
                     alt="Peaceful morning scene" 
                     class="rounded-xl shadow-lg w-full h-48 object-cover">
            </div>
        </div>
    </div>

    <!-- Playlist Grid -->
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-textMain mb-6">All Playlists</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% playlists.forEach(playlist => { %>
            <div class="card group hover:transform hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="relative mb-4">
                    <img src="<%= playlist.image %>" 
                         alt="<%= playlist.title %>" 
                         class="w-full h-48 object-cover rounded-lg">
                    <div class="absolute inset-0 bg-black bg-opacity-40 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                        <button class="bg-white text-primary hover:bg-primary hover:text-white p-4 rounded-full transition-colors duration-200">
                            <i class="fas fa-play text-xl"></i>
                        </button>
                    </div>
                </div>
                <h3 class="text-lg font-semibold text-textMain mb-2 group-hover:text-primary transition-colors duration-200">
                    <%= playlist.title %>
                </h3>
                <p class="text-gray-600 text-sm mb-4">
                    <%= playlist.description %>
                </p>
                <div class="flex justify-between items-center">
                    <button class="btn-primary text-sm py-2 px-4">
                        <i class="fas fa-play mr-1"></i>Play
                    </button>
                    <div class="flex space-x-2">
                        <button class="text-gray-400 hover:text-primary transition-colors duration-200">
                            <i class="fas fa-heart"></i>
                        </button>
                        <button class="text-gray-400 hover:text-primary transition-colors duration-200">
                            <i class="fas fa-share"></i>
                        </button>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Music Player Interface -->
    <div class="bg-white rounded-2xl shadow-lg p-6 sticky bottom-4 border border-gray-200">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mr-4">
                    <i class="fas fa-music text-white"></i>
                </div>
                <div>
                    <h4 class="font-semibold text-textMain">No song selected</h4>
                    <p class="text-sm text-gray-600">Choose a playlist to start listening</p>
                </div>
            </div>
            
            <div class="flex items-center space-x-4">
                <button class="text-gray-400 hover:text-primary transition-colors duration-200">
                    <i class="fas fa-step-backward text-lg"></i>
                </button>
                <button class="bg-primary text-white hover:bg-primary/90 p-3 rounded-full transition-colors duration-200">
                    <i class="fas fa-play"></i>
                </button>
                <button class="text-gray-400 hover:text-primary transition-colors duration-200">
                    <i class="fas fa-step-forward text-lg"></i>
                </button>
            </div>
            
            <div class="flex items-center space-x-2">
                <i class="fas fa-volume-down text-gray-400"></i>
                <div class="w-20 h-2 bg-gray-200 rounded-full">
                    <div class="w-3/5 h-full bg-primary rounded-full"></div>
                </div>
                <i class="fas fa-volume-up text-gray-400"></i>
            </div>
        </div>
    </div>

    <!-- Music Benefits Section -->
    <div class="mt-12 bg-gray-50 rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-textMain mb-6 text-center">
            The Science Behind Music Therapy
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
                <div class="bg-primary text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-brain text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-textMain mb-2">Reduces Anxiety</h3>
                <p class="text-gray-600">Music therapy has been shown to significantly reduce anxiety levels and promote relaxation.</p>
            </div>
            
            <div class="text-center">
                <div class="bg-secondary text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-heart text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-textMain mb-2">Improves Mood</h3>
                <p class="text-gray-600">Listening to therapeutic music can boost dopamine levels and improve overall mood.</p>
            </div>
            
            <div class="text-center">
                <div class="bg-accent text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-moon text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-textMain mb-2">Better Sleep</h3>
                <p class="text-gray-600">Calming melodies can help regulate sleep patterns and improve sleep quality.</p>
            </div>
        </div>
    </div>
</div>