<!-- Enhanced Account Page Template -->
<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Account</h1>
      <p class="mt-2 text-gray-600">Manage your profile and account settings</p>
    </div>

    <!-- Account Type Badge -->
    <div class="mb-6">
      <div
        id="roleBadge"
        class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= user.role === 'therapist' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>"
      >
        <% if (user.role === 'therapist') { %>
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Licensed Therapist <% } else { %>
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
            clip-rule="evenodd"
          />
        </svg>
        Patient <% } %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Profile Card -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-center">
            <div class="mb-4">
              <% if (user.profile_image) { %>
              <img
                src="<%= user.profile_image %>"
                alt="<%= user.name %>"
                class="w-32 h-32 rounded-full mx-auto object-cover border-4 border-gray-200"
              />
              <% } else { %>
              <div
                class="w-32 h-32 bg-gray-300 rounded-full mx-auto flex items-center justify-center"
              >
                <i class="fas fa-user text-4xl text-gray-500"></i>
              </div>
              <% } %>
            </div>

            <h2 class="text-xl font-semibold text-gray-900">
              <%= user.name %>
            </h2>
            <p class="text-gray-600"><%= user.email %></p>

            <!-- Role-specific info -->
            <div class="mt-4 p-3 bg-gray-50 rounded-lg">
              <% if (user.role === 'therapist') { %>
              <div class="text-center">
                <i class="fas fa-stethoscope text-green-600 text-2xl mb-2"></i>
                <p class="text-sm font-medium text-gray-700">
                  Licensed Therapist
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  Helping patients on their wellness journey
                </p>
              </div>
              <% } else { %>
              <div class="text-center">
                <i class="fas fa-heart text-blue-600 text-2xl mb-2"></i>
                <p class="text-sm font-medium text-gray-700">
                  Wellness Journey
                </p>
                <p class="text-xs text-gray-500 mt-1">
                  Member since <%= new
                  Date(user.created_at).toLocaleDateString() %>
                </p>
              </div>
              <% } %>
            </div>
          </div>
          
          <!-- Profile Completion -->
          <div class="mt-6 pt-4 border-t border-gray-200">
            <div class="flex justify-between items-center">
              <span class="text-sm font-medium text-gray-700">Profile Completion</span>
              <span id="profileCompletion" class="text-sm font-semibold text-teal-600">0%</span>
            </div>
            <div class="mt-2 w-full bg-gray-200 rounded-full h-2">
              <div id="completionBar" class="bg-teal-600 h-2 rounded-full" style="width: 0%"></div>
            </div>
          </div>
        </div>

        <!-- Quick Stats (for therapists) -->
        <% if (user.role === 'therapist') { %>
        <div class="bg-white rounded-lg shadow p-6 mt-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Stats</h3>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">Active Patients</span>
              <span class="font-semibold text-green-600">12</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">This Month</span>
              <span class="font-semibold text-blue-600">48 Sessions</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Rating</span>
              <span class="font-semibold text-yellow-600">4.9 ‚≠ê</span>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Account Settings Form -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow">
          <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
              Account Information
            </h3>
            <p class="mt-1 text-gray-600">
              Update your personal information and profile settings
            </p>
          </div>

          <!-- Flash Messages Container -->
          <div id="flashMessages" class="px-6"></div>

          <form
            id="accountForm"
            action="/account"
            method="POST"
            enctype="multipart/form-data"
            class="p-6"
          >
            <!-- Name -->
            <div class="mb-6">
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Full Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                value="<%= user.name %>"
                required
                class="form-input"
              />
            </div>

            <!-- Email -->
            <div class="mb-6">
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                value="<%= user.email %>"
                required
                class="form-input"
              />
            </div>

            <!-- Role Selection -->
            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 mb-3">
                Account Type
              </label>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div
                  id="patientLabel"
                  class="relative flex cursor-pointer rounded-lg border p-4 focus:outline-none <%= user.role === 'patient' ? 'border-blue-200 bg-blue-50' : 'border-gray-200' %>"
                >
                  <input type="radio" id="role-patient" name="role"
                  value="patient" <%= user.role === 'patient' ? 'checked' : ''
                  %> class="sr-only" >
                  <label
                    for="role-patient"
                    class="role-option role-option-patient <%= user.role === 'patient' ? 'selected' : '' %>"
                  >
                    <div class="flex items-center">
                      <i
                        class="fas fa-user-circle text-blue-600 text-2xl mr-3"
                      ></i>
                      <div>
                        <div class="font-medium text-gray-900">Patient</div>
                        <div class="text-sm text-gray-500">
                          Seeking mental health support
                        </div>
                      </div>
                    </div>
                  </label>
                  <div
                    id="patient-border"
                    class="absolute -inset-px rounded-lg border-2 pointer-events-none <%= user.role === 'patient' ? 'border-blue-500' : 'border-transparent' %>"
                  ></div>
                </div>

                <div
                  id="therapistLabel"
                  class="relative flex cursor-pointer rounded-lg border p-4 focus:outline-none <%= user.role === 'therapist' ? 'border-purple-200 bg-purple-50' : 'border-gray-200' %>"
                >
                  <input type="radio" id="role-therapist" name="role"
                  value="therapist" <%= user.role === 'therapist' ? 'checked' :
                  '' %> class="sr-only" >
                  <label
                    for="role-therapist"
                    class="role-option role-option-therapist <%= user.role === 'therapist' ? 'selected' : '' %>"
                  >
                    <div class="flex items-center">
                      <i
                        class="fas fa-user-md text-green-600 text-2xl mr-3"
                      ></i>
                      <div>
                        <div class="font-medium text-gray-900">Therapist</div>
                        <div class="text-sm text-gray-500">
                          Licensed mental health professional
                        </div>
                      </div>
                    </div>
                  </label>
                  <div
                    id="therapist-border"
                    class="absolute -inset-px rounded-lg border-2 pointer-events-none <%= user.role === 'therapist' ? 'border-purple-500' : 'border-transparent' %>"
                  ></div>
                </div>
              </div>
            </div>

            <!-- Profile Image Upload -->
            <div class="mb-6">
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Profile Image
              </label>

              <!-- Main profile preview circle -->
              <div class="flex justify-center mb-4">
                <div id="profilePreview" class="relative">
                  <% if (user.profile_image) { %>
                  <img
                    src="<%= user.profile_image %>"
                    alt="<%= user.name %>"
                    class="w-32 h-32 rounded-full object-cover border-4 border-teal-100"
                  />
                  <% } else { %>
                  <div
                    class="w-32 h-32 rounded-full bg-teal-100 flex items-center justify-center border-4 border-teal-200"
                  >
                    <svg
                      class="w-12 h-12 text-teal-500"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                  <% } %>
                </div>
              </div>

              <!-- Drag and drop zone -->
              <div
                id="dropZone"
                class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center mb-4 cursor-pointer hover:border-teal-400 transition-colors"
              >
                <div class="space-y-2">
                  <svg
                    class="mx-auto h-12 w-12 text-gray-400"
                    stroke="currentColor"
                    fill="none"
                    viewBox="0 0 48 48"
                  >
                    <path
                      d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l3.172-3.172a4 4 0 015.656 0L20 32"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                  <div class="flex text-sm text-gray-600 justify-center">
                    <label
                      for="profileImageInput"
                      class="relative cursor-pointer bg-white rounded-md font-medium text-teal-600 hover:text-teal-500"
                    >
                      <span>Upload a file</span>
                      <input
                        type="file"
                        id="profileImageInput"
                        name="profile_image_file"
                        accept="image/*"
                        class="sr-only"
                      />
                    </label>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs text-gray-500">PNG, JPG, GIF up to 5MB</p>
                </div>
              </div>

              <!-- Image preview area -->
              <div id="imagePreviewArea" class="mb-4 hidden">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium text-gray-700"
                    >Selected Image Preview</span
                  >
                  <button
                    type="button"
                    onclick="removeImage()"
                    class="text-sm text-red-600 hover:text-red-800"
                  >
                    Remove
                  </button>
                </div>
                <img
                  id="imagePreview"
                  src=""
                  alt="Preview"
                  class="max-w-full h-auto rounded-lg border border-gray-200"
                />
              </div>

              <!-- URL input as alternative -->
              <div class="space-y-2">
                <p class="text-sm text-gray-600">Or enter an image URL:</p>
                <input
                  type="url"
                  id="profile_image"
                  name="profile_image"
                  value="<%= user.profile_image || '' %>"
                  placeholder="https://example.com/image.jpg"
                  class="form-input w-full"
                />
              </div>

              <!-- Save status message -->
              <div
                id="saveStatus"
                class="text-sm text-gray-600 mt-2 hidden"
              ></div>
            </div>

            <!-- Save Button -->
            <div class="flex justify-end space-x-3">
              <button
                type="button"
                onclick="confirmDelete()"
                class="px-4 py-2 text-red-600 hover:text-red-800 text-sm font-medium"
              >
                Delete Account
              </button>
              <button type="submit" class="btn-primary">Update Profile</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
