

<div class="max-w-3xl mx-auto py-10">
    <h1 class="text-3xl font-bold mb-6">My Account</h1>

    <% if (success && success.length > 0) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 mb-4 rounded">
            <%= success %>
        </div>
    <% } %>

    <% if (error && error.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded">
            <%= error %>
        </div>
    <% } %>

    <form action="/account" method="POST" class="space-y-4">
        <div>
            <label class="block font-medium">Name</label>
            <input type="text" name="name" value="<%= user.name %>" class="border rounded px-3 py-2 w-full">
        </div>

        <div>
            <label class="block font-medium">Email</label>
            <input type="email" name="email" value="<%= user.email %>" class="border rounded px-3 py-2 w-full">
        </div>

        <div>
            <label class="block font-medium">Profile Image URL</label>
            <input type="text" name="profile_image" value="<%= user.profile_image || '' %>" class="border rounded px-3 py-2 w-full">
        </div>

        <% if (user.profile_image) { %>
            <div>
                <img src="<%= user.profile_image %>" alt="Profile Image" class="w-32 h-32 rounded-full object-cover">
            </div>
        <% } %>

        <button type="submit" class="bg-primary text-white px-4 py-2 rounded">
            Update Profile
        </button>
    </form>
</div>
