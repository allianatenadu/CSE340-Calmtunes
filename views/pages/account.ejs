<!-- Flash Messages Container -->
<div id="flashMessages" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-6">
  <!-- Flash messages will be inserted here by JavaScript -->
</div>

<!-- Account Page Container -->
<div class="min-h-screen bg-gradient-to-br from-calm-50 via-white to-blue-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Profile Header Card -->
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden mb-8 border border-gray-100">
      <!-- Gradient Background Header -->
      <div class="bg-gradient-to-r from-calm-600 via-calm-700 to-teal-800 px-8 py-12 relative overflow-hidden">
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full transform translate-x-32 -translate-y-32"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-white/5 rounded-full transform -translate-x-16 translate-y-16"></div>
        
        <div class="relative flex flex-col lg:flex-row items-center lg:items-start gap-8">
          <!-- Profile Avatar Section -->
          <div class="flex-shrink-0 relative">
            <div id="profilePreview" class="relative group">
              <% if (user.profile_image) { %>
                <img src="<%= user.profile_image %>" alt="Profile" 
                     class="w-32 h-32 rounded-full object-cover border-4 border-white/30 shadow-lg">
              <% } else { %>
                <div class="w-32 h-32 rounded-full bg-white/20 flex items-center justify-center border-4 border-white/30 shadow-lg">
                  <svg class="w-12 h-12 text-white/70" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% } %>
              
              <!-- Camera Overlay -->
              <div class="absolute inset-0 bg-black/50 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center cursor-pointer"
                   onclick="document.getElementById('profileImageInput').click()">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
            </div>

            <!-- Role Badge -->
            <div id="roleBadge" class="absolute -bottom-2 -right-2">
              <% if (user.role === 'therapist') { %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800 shadow-lg">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Licensed Therapist
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 shadow-lg">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                  </svg>
                  Patient
                </span>
              <% } %>
            </div>
          </div>

          <!-- Profile Info -->
          <div class="flex-grow text-center lg:text-left text-white">
            <h1 class="text-3xl lg:text-4xl font-bold mb-2"><%= user.name %></h1>
            <p class="text-white/80 text-lg mb-4"><%= user.email %></p>
            
            <!-- Profile Completion -->
            <div class="inline-flex items-center px-4 py-2 bg-white/10 rounded-full backdrop-blur-sm">
              <svg class="w-5 h-5 mr-2 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Profile <span id="profileCompletion" class="font-semibold ml-1">85%</span> Complete
            </div>
          </div>

          <!-- Quick Stats -->
          <div class="flex gap-8 text-center text-white lg:flex-col lg:gap-4">
            <div>
              <div class="text-2xl font-bold">12</div>
              <div class="text-sm text-white/70">Sessions</div>
            </div>
            <div>
              <div class="text-2xl font-bold">3</div>
              <div class="text-sm text-white/70">Playlists</div>
            </div>
            <div>
              <div class="text-2xl font-bold">24h</div>
              <div class="text-sm text-white/70">Total Time</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      
      <!-- Sidebar Navigation -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden sticky top-24">
          <div class="p-6">
            <h2 class="font-semibold text-gray-900 mb-4">Account Settings</h2>
            
            <!-- Navigation Menu -->
            <nav class="space-y-2">
              <button onclick="showTab('personal')" 
