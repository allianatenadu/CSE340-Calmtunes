                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Personal Info
              </button>
              
              <button onclick="showTab('preferences')" 
                      class="tab-nav-btn w-full text-left px-4 py-3 rounded-xl transition-all duration-200 flex items-center group">
                <svg class="w-5 h-5 mr-3 text-purple-500 group-hover:text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                </svg>
                Music Preferences
              </button>
              
              <button onclick="showTab('notifications')" 
                      class="tab-nav-btn w-full text-left px-4 py-3 rounded-xl transition-all duration-200 flex items-center group">
                <svg class="w-5 h-5 mr-3 text-blue-500 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4 6h16M4 12h16M4 18h7"/>
                </svg>
                Notifications
              </button>
              
              <button onclick="showTab('privacy')" 
                      class="tab-nav-btn w-full text-left px-4 py-3 rounded-xl transition-all duration-200 flex items-center group">
                <svg class="w-5 h-5 mr-3 text-green-500 group-hover:text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                Privacy & Security
              </button>
              
              <button onclick="showTab('danger')" 
                      class="tab-nav-btn w-full text-left px-4 py-3 rounded-xl transition-all duration-200 flex items-center group">
                <svg class="w-5 h-5 mr-3 text-red-500 group-hover:text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.996-.833-2.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                Danger Zone
              </button>
            </nav>
          </div>
        </div>
      </div>

      <!-- Main Content Area -->
      <div class="lg:col-span-3">
        
        <!-- Personal Information Tab -->
        <div id="personal" class="tab-panel">
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-100">
              <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <svg class="w-6 h-6 mr-3 text-calm-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                Personal Information
              </h3>
            </div>
            
            <form id="accountForm" action="/account" method="POST" enctype="multipart/form-data" class="p-8">
              <!-- Hidden File Input -->
              <input type="file" id="profileImageInput" name="profile_image_file" 
                     class="hidden" accept="image/*" onchange="handleImageSelect(this)">
              
              <!-- Image Upload Section -->
              <div class="mb-8">
                <h4 class="text-lg font-medium text-gray-900 mb-4">Profile Photo</h4>
                
                <!-- Drag & Drop Zone -->
                <div id="dropZone" class="border-2 border-dashed border-gray-300 rounded-xl p-6 text-center hover:border-calm-400 transition-colors duration-200">
                  <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                  </svg>
                  <p class="text-gray-600 mb-2">Drag and drop your image here, or</p>
                  <button type="button" onclick="document.getElementById('profileImageInput').click()" 
                          class="text-calm-600 hover:text-calm-700 font-medium">browse files</button>
                  <p class="text-sm text-gray-500 mt-2">PNG, JPG, WebP up to 5MB</p>
                </div>

                <!-- Image Preview -->
                <div id="imagePreviewArea" class="hidden mt-4 relative">
                  <img id="imagePreview" class="w-32 h-32 rounded-xl object-cover border-2 border-gray-200">
                  <button type="button" onclick="removeImage()" 
                          class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600 transition-colors">
                    ×
                  </button>
                </div>
              </div>

              <!-- Form Fields -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <!-- Full Name -->
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Full Name <span class="text-red-500">*</span>
                  </label>
                  <input type="text" id="name" name="name" required
                         value="<%= user.name %>"
                         class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-calm-500 focus:border-transparent transition-all duration-200">
                </div>

                <!-- Email -->
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email Address <span class="text-red-500">*</span>
                  </label>
                  <input type="email" id="email" name="email" required
                         value="<%= user.email %>"
                         class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-calm-500 focus:border-transparent transition-all duration-200">
                </div>
              </div>

              <!-- Profile Image URL -->
              <div class="mb-8">
                <label for="profile_image" class="block text-sm font-medium text-gray-700 mb-2">
                  Profile Image URL (Optional)
                </label>
                <input type="url" id="profile_image" name="profile_image" 
                       value="<%= user.profile_image || '' %>"
                       placeholder="https://example.com/image.jpg"
                       class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-calm-500 focus:border-transparent transition-all duration-200">
                <p class="text-sm text-gray-500 mt-2">Leave empty to use uploaded file above</p>
              </div>

              <!-- Account Type Selection -->
              <div class="mb-8">
                <label class="block text-sm font-medium text-gray-700 mb-4">Account Type</label>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <!-- Patient Option -->
                  <label id="patientLabel" class="relative flex cursor-pointer rounded-xl border p-4 focus:outline-none <%= user.role === 'patient' ? 'border-blue-200 bg-blue-50' : 'border-gray-200' %>">
                    <input type="radio" name="role" value="patient" 
                           <%= user.role === 'patient' ? 'checked' : '' %> class="sr-only">
                    <div class="flex items-center">
                      <div class="text-sm">
                        <div class="flex items-center">
                          <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                          </svg>
                          <div class="font-medium text-gray-900">Patient</div>
                        </div>
                        <div class="text-gray-500 text-xs mt-1">Access therapeutic resources and track your wellness journey</div>
                      </div>
                    </div>
                    <div id="patient-border" class="absolute -inset-px rounded-xl border-2 pointer-events-none <%= user.role === 'patient' ? 'border-blue-500' : 'border-transparent' %>"></div>
                  </label>

                  <!-- Therapist Option -->
                  <label id="therapistLabel" class="relative flex cursor-pointer rounded-xl border p-4 focus:outline-none <%= user.role === 'therapist' ? 'border-purple-200 bg-purple-50' : 'border-gray-200' %>">
                    <input type="radio" name="role" value="therapist" 
                           <%= user.role === 'therapist' ? 'checked' : '' %> class="sr-only">
                    <div class="flex items-center">
                      <div class="text-sm">
                        <div class="flex items-center">
                          <svg class="w-5 h-5 text-purple-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <div class="font-medium text-gray-900">Therapist</div>
                        </div>
                        <div class="text-gray-500 text-xs mt-1">Manage clients and provide professional mental health support</div>
                      </div>
                    </div>
                    <div id="therapist-border" class="absolute -inset-px rounded-xl border-2 pointer-events-none <%= user.role === 'therapist' ? 'border-purple-500' : 'border-transparent' %>"></div>
                  </label>
                </div>
              </div>

              <!-- Save Status -->
              <div id="saveStatus" class="hidden mb-4"></div>

              <!-- Action Buttons -->
              <div class="flex flex-col sm:flex-row gap-4 justify-end">
                <button type="button" onclick="resetForm()" 
                        class="px-6 py-3 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition-all duration-200">
                  Reset Changes
                </button>
                <button type="submit" 
                        class="px-8 py-3 bg-gradient-to-r from-calm-600 to-calm-700 text-white rounded-xl hover:from-calm-700 hover:to-calm-800 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                  Update Profile
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Music Preferences Tab -->
        <div id="preferences" class="tab-panel hidden">
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-100">
              <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <svg class="w-6 h-6 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                </svg>
                Music & Therapy Preferences
              </h3>
            </div>
            
            <div class="p-8">
              <form class="space-y-8">
                <!-- Music Genres -->
                <div>
                  <h4 class="text-lg font-medium text-gray-900 mb-4">Preferred Music Genres</h4>
                  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Classical</span>
                    </label>
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Ambient</span>
                    </label>
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Nature Sounds</span>
                    </label>
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Meditation</span>
                    </label>
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Jazz</span>
                    </label>
                    <label class="flex items-center p-3 rounded-xl border border-gray-200 hover:bg-gray-50 cursor-pointer">
                      <input type="checkbox" class="rounded text-calm-600 focus:ring-calm-500">
                      <span class="ml-3 text-sm font-medium">Instrumental</span>
                    </label>
                  </div>
                </div>

                <!-- Session Settings -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="sessionLength" class="block text-sm font-medium text-gray-700 mb-2">
                      Preferred Session Length
                    </label>
                    <select id="sessionLength" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-calm-500 focus:border-transparent">
                      <option value="15">15 minutes</option>
                      <option value="30" selected>30 minutes</option>
                      <option value="45">45 minutes</option>
                      <option value="60">60 minutes</option>
                    </select>
                  </div>

                  <div>
                    <label for="defaultVolume" class="block text-sm font-medium text-gray-700 mb-2">
                      Default Volume: <span id="volumeDisplay">50%</span>
                    </label>
                    <input type="range" id="defaultVolume" min="0" max="100" value="50" 
                           class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer">
                  </div>
                </div>

                <div class="flex justify-end">
                  <button type="submit" class="px-8 py-3 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-xl hover:from-purple-700 hover:to-purple-800 transition-all duration-200">
                    Save Preferences
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Notifications Tab -->
        <div id="notifications" class="tab-panel hidden">
          <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-100">
              <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM4.343 15.657l9.9-9.9"/>
                </svg>
                Notification Settings
              </h3>
            </div>
            
            <div class="p-8">
              <div class="space-y-6">
                <!-- Email Notifications -->
                <div class="bg-gray-50 rounded-xl p-6">
                  <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    Email Notifications
                  </h4>
                  <div class="space-y-4">
                    <div class="flex items-center justify-between">
                      <div>
                        <h5 class="font-medium text-gray-900">Session Reminders</h5>
                        <p class="text-sm text-gray-500">Get notified about upcoming therapy sessions</p>
                      </div>
                      <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer" checked>
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-calm-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-calm-600"></div>
                      </label>
                    </div>

                    <div class="flex items-center justify-between">
                      <div>
                        <h5 class="font-medium text-gray-900">Progress Updates</h5>
                        <p class="text-sm text-gray-500">Receive weekly progress reports and insights</p>
                      </div>
                      <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer" checked>
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-calm-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-calm-600"></div>
                      </label>
                    </div>

                    <div class="flex items-center justify-between">
                      <div>
                        <h5 class="font-medium text-gray-900">New Content Alerts</h5>
                        <p class="text-sm text-gray-500">Get notified when new therapeutic content is available</p>
                      </div>
                      <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" class="sr-only peer">
                        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-calm-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-calm-600"></div>
