

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-textMain mb-4">
            üë©‚Äç‚öïÔ∏è Find a Therapist
        </h1>
        <p class="text-xl text-gray-600">
            Connect with licensed mental health professionals who understand your needs
        </p>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-textMain mb-2">Search</label>
                <input 
                    type="text" 
                    placeholder="Name or specialty..." 
                    class="form-input"
                    id="therapist-search"
                >
            </div>
            <div>
                <label class="block text-sm font-medium text-textMain mb-2">Specialty</label>
                <select class="form-input" id="specialty-filter">
                    <option value="">All Specialties</option>
                    <option value="anxiety">Anxiety & Depression</option>
                    <option value="cbt">Cognitive Behavioral Therapy</option>
                    <option value="trauma">Trauma & PTSD</option>
                    <option value="couples">Couples Therapy</option>
                    <option value="family">Family Therapy</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-textMain mb-2">Availability</label>
                <select class="form-input" id="availability-filter">
                    <option value="">Any time</option>
                    <option value="morning">Morning</option>
                    <option value="afternoon">Afternoon</option>
                    <option value="evening">Evening</option>
                    <option value="weekend">Weekend</option>
                </select>
            </div>
            <div class="flex items-end">
                <button class="btn-primary w-full">
                    <i class="fas fa-search mr-2"></i>Find Therapists
                </button>
            </div>
        </div>
    </div>

    <!-- Featured Therapist -->
    <div class="gradient-bg text-white rounded-2xl p-8 mb-12">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/4 mb-6 md:mb-0 md:mr-8">
                <img 
                    src="https://images.pexels.com/photos/5327656/pexels-photo-5327656.jpeg?auto=compress&cs=tinysrgb&w=300" 
                    alt="Dr. Sarah Johnson" 
                    class="w-32 h-32 rounded-full mx-auto shadow-lg object-cover"
                >
            </div>
            <div class="md:w-3/4">
                <div class="flex items-center mb-3">
                    <h2 class="text-2xl font-bold mr-4">Dr. Sarah Johnson</h2>
                    <div class="flex items-center">
                        <i class="fas fa-star text-yellow-300 mr-1"></i>
                        <span class="font-semibold">4.9</span>
                    </div>
                </div>
                <p class="text-lg opacity-90 mb-4">Specializing in Anxiety & Depression</p>
                <p class="mb-6 opacity-90">
                    Dr. Johnson has over 12 years of experience helping individuals overcome anxiety and depression. 
                    She specializes in cognitive behavioral therapy and mindfulness-based approaches.
                </p>
                <div class="flex space-x-4">
                    <button class="bg-white text-primary hover:bg-gray-100 font-bold py-3 px-6 rounded-lg transition-colors duration-200">
                        <i class="fas fa-calendar mr-2"></i>Book Consultation
                    </button>
                    <button class="border-2 border-white text-white hover:bg-white hover:text-primary font-bold py-3 px-6 rounded-lg transition-all duration-200">
                        <i class="fas fa-comments mr-2"></i>Send Message
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Therapist Directory -->
    <div class="mb-12">
        <h2 class="text-2xl font-bold text-textMain mb-8">Available Therapists</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% therapists.forEach(therapist => { %>
            <div class="card group hover:transform hover:scale-105 transition-all duration-300">
                <div class="text-center mb-4">
                    <img 
                        src="<%= therapist.image %>" 
                        alt="<%= therapist.name %>" 
                        class="w-24 h-24 rounded-full mx-auto mb-4 object-cover shadow-md"
                    >
                    <h3 class="text-xl font-bold text-textMain mb-1"><%= therapist.name %></h3>
                    <p class="text-primary font-medium mb-2"><%= therapist.specialty %></p>
                    <div class="flex items-center justify-center mb-3">
                        <div class="flex items-center">
                            <% for (let i = 0; i < 5; i++) { %>
                                <i class="fas fa-star <%= i < Math.floor(therapist.rating) ? 'text-yellow-400' : 'text-gray-300' %> text-sm"></i>
                            <% } %>
                        </div>
                        <span class="ml-2 text-sm text-gray-600"><%= therapist.rating %></span>
                    </div>
                </div>
                
                <div class="space-y-2 mb-6">
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-clock text-primary mr-2"></i>
                        <span>Available today</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-video text-primary mr-2"></i>
                        <span>Video & In-person sessions</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-600">
                        <i class="fas fa-certificate text-primary mr-2"></i>
                        <span>Licensed Professional</span>
                    </div>
                </div>
                
                <div class="space-y-3">
                    <button class="w-full btn-primary group-hover:bg-primary/90 transition-colors duration-200">
                        <i class="fas fa-calendar mr-2"></i>Schedule Consultation
                    </button>
                    <button class="w-full btn-secondary group-hover:bg-secondary/90 transition-colors duration-200">
                        <i class="fas fa-comments mr-2"></i>Start Chat
                    </button>
                </div>
            </div>
            <% }) %>
        </div>
    </div>

    <!-- Chat Interface -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Chat Window -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden h-96 flex flex-col">
                <!-- Chat Header -->
                <div class="bg-primary text-white p-4">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-white/20 flex items-center justify-center mr-3">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Support Chat</h3>
                            <p class="text-sm opacity-75">Online now</p>
                        </div>
                        <div class="ml-auto flex space-x-2">
                            <button class="text-white/80 hover:text-white">
                                <i class="fas fa-video"></i>
                            </button>
                            <button class="text-white/80 hover:text-white">
                                <i class="fas fa-phone"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Chat Messages -->
                <div class="flex-grow p-4 overflow-y-auto bg-gray-50">
                    <div class="space-y-4">
                        <!-- Support message -->
                        <div class="flex">
                            <div class="bg-white p-3 rounded-lg shadow-sm max-w-xs">
                                <p class="text-sm">Hello! I'm here to help you connect with the right therapist. How are you feeling today?</p>
                                <span class="text-xs text-gray-500 mt-1 block">Support ‚Ä¢ 2 min ago</span>
                            </div>
                        </div>
                        
                        <!-- User message -->
                        <div class="flex justify-end">
                            <div class="bg-primary text-white p-3 rounded-lg max-w-xs">
                                <p class="text-sm">I'm looking for someone who specializes in anxiety. I've been having panic attacks lately.</p>
                                <span class="text-xs text-white/75 mt-1 block">You ‚Ä¢ 1 min ago</span>
                            </div>
                        </div>
                        
                        <!-- Support response -->
                        <div class="flex">
                            <div class="bg-white p-3 rounded-lg shadow-sm max-w-xs">
                                <p class="text-sm">I understand how difficult that must be. I'd recommend Dr. Sarah Johnson - she specializes in anxiety disorders and has excellent reviews for panic attack treatment. Would you like me to check her availability?</p>
                                <span class="text-xs text-gray-500 mt-1 block">Support ‚Ä¢ Just now</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Chat Input -->
                <div class="border-t border-gray-200 p-4">
                    <div class="flex space-x-2">
                        <input 
                            type="text" 
                            placeholder="Type your message..." 
                            class="flex-grow form-input"
                            id="chat-input"
                        >
                        <button class="btn-primary px-4">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Therapy Resources -->
        <div class="space-y-6">
            <!-- Insurance Info -->
            <div class="card">
                <h3 class="text-lg font-semibold text-textMain mb-4 flex items-center">
                    <i class="fas fa-shield-alt text-primary mr-2"></i>
                    Insurance Coverage
                </h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-2 bg-green-50 rounded">
                        <span class="text-sm">Accepted</span>
                        <span class="text-xs text-green-600 font-medium">Most Major Plans</span>
                    </div>
                    <p class="text-sm text-gray-600">We work with most insurance providers. Check with your specific plan for coverage details.</p>
                </div>
            </div>

            <!-- Session Types -->
            <div class="card">
                <h3 class="text-lg font-semibold text-textMain mb-4 flex items-center">
                    <i class="fas fa-laptop text-secondary mr-2"></i>
                    Session Options
                </h3>
                <div class="space-y-3">
                    <div class="flex items-center p-2 bg-blue-50 rounded">
                        <i class="fas fa-video text-blue-600 mr-3"></i>
                        <div>
                            <div class="text-sm font-medium">Video Sessions</div>
                            <div class="text-xs text-gray-600">Secure, HIPAA-compliant</div>
                        </div>
                    </div>
                    <div class="flex items-center p-2 bg-green-50 rounded">
                        <i class="fas fa-building text-green-600 mr-3"></i>
                        <div>
                            <div class="text-sm font-medium">In-Person</div>
                            <div class="text-xs text-gray-600">Local office locations</div>
                        </div>
                    </div>
                    <div class="flex items-center p-2 bg-purple-50 rounded">
                        <i class="fas fa-comments text-purple-600 mr-3"></i>
                        <div>
                            <div class="text-sm font-medium">Messaging</div>
                            <div class="text-xs text-gray-600">Between sessions</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Crisis Resources -->
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                <h3 class="text-lg font-semibold text-red-800 mb-3 flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-600 mr-2"></i>
                    Crisis Support
                </h3>
                <div class="space-y-2 text-sm">
                    <p class="text-red-700">
                        <i class="fas fa-phone mr-2"></i>
                        <strong>Crisis Text Line:</strong> 741741
                    </p>
                    <p class="text-red-700">
                        <i class="fas fa-phone mr-2"></i>
                        <strong>Suicide Prevention:</strong> 988
                    </p>
                    <p class="text-red-700">
                        <i class="fas fa-phone mr-2"></i>
                        <strong>Emergency:</strong> 911
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>