<% layout('layouts/main') -%>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-textMain">Manage Therapists</h1>
      <p class="text-gray-600 mt-2">View and manage approved therapists</p>
    </div>
    <a href="/admin" class="btn-secondary">
      <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
    </a>
  </div>

  <% if (therapists && therapists.length > 0) { %>
    <!-- Therapists List -->
    <div class="space-y-4">
      <% therapists.forEach(therapist => { %>
        <div class="therapist-card bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div class="flex items-start justify-between">
            <div class="flex items-start space-x-4">
              <!-- Profile Image -->
              <div class="flex-shrink-0">
                <% if (therapist.profile_image) { %>
                  <img src="/uploads/<%= therapist.profile_image %>"
                       alt="<%= therapist.name %>'s Profile"
                       class="w-16 h-16 rounded-full object-cover border-2 border-gray-200">
                <% } else { %>
                  <div class="w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center">
                    <i class="fas fa-user-md text-gray-400 text-xl"></i>
                  </div>
                <% } %>
              </div>

              <!-- Therapist Info -->
              <div class="flex-1">
                <div class="flex items-center space-x-3 mb-2">
                  <h3 class="text-lg font-semibold text-gray-900"><%= therapist.name %></h3>
                  <span class="status-badge status-active">
                    <i class="fas fa-user-md mr-1"></i>Active Therapist
                  </span>
                  <% if (therapist.patient_count > 0) { %>
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                      <i class="fas fa-users mr-1"></i><%= therapist.patient_count %> patient<%= therapist.patient_count !== 1 ? 's' : '' %>
                    </span>
                  <% } %>
                </div>

                <p class="text-gray-600 mb-2">
                  <i class="fas fa-envelope mr-2"></i><%= therapist.email %>
                </p>

                <% if (therapist.specialty) { %>
                  <p class="text-gray-600 mb-2">
                    <i class="fas fa-stethoscope mr-2"></i><%= therapist.specialty %>
                  </p>
                <% } %>

                <% if (therapist.experience) { %>
                  <p class="text-gray-600 mb-3">
                    <i class="fas fa-briefcase mr-2"></i><%= therapist.experience %>
                  </p>
                <% } %>

                <% if (therapist.bio) { %>
                  <p class="text-gray-700 text-sm mb-3 line-clamp-2"><%= therapist.bio %></p>
                <% } %>

                <div class="flex items-center space-x-4 text-sm text-gray-500">
                  <span>
                    <i class="fas fa-calendar-plus mr-1"></i>
                    Joined: <%= new Date(therapist.created_at).toLocaleDateString() %>
                  </span>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col space-y-2">
              <button class="view-therapist-btn btn-primary text-sm px-4 py-2 text-center"
                      data-therapist-id="<%= therapist.id %>">
                <i class="fas fa-eye mr-1"></i>View Details
              </button>

              <form method="POST" action="/admin/therapists/<%= therapist.id %>/toggle-status" class="inline">
                <input type="hidden" name="action" value="deactivate">
                <button type="submit"
                        class="btn-warning text-sm px-4 py-2 w-full"
                        onclick="return confirm('Are you sure you want to deactivate this therapist?')">
                  <i class="fas fa-pause mr-1"></i>Deactivate
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
        <i class="fas fa-user-md text-6xl"></i>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Therapists Yet</h3>
      <p class="text-gray-600">No therapists have been approved yet.</p>
      <div class="mt-6">
        <a href="/admin/applications" class="btn-primary">
          <i class="fas fa-file-medical mr-2"></i>Review Applications
        </a>
      </div>
    </div>
  <% } %>
</div>

<style>
.status-badge {
  @apply inline-flex items-center px-2 py-1 rounded-full text-xs font-medium;
}

.status-active {
  @apply bg-green-100 text-green-800;
}

.btn-warning {
  @apply bg-yellow-600 text-white hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 rounded-md font-medium transition-colors;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle view therapist details button clicks
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('view-therapist-btn') || e.target.closest('.view-therapist-btn')) {
      const button = e.target.classList.contains('view-therapist-btn') ? e.target : e.target.closest('.view-therapist-btn');
      const therapistId = button.getAttribute('data-therapist-id');

      // For now, just show an alert - you can implement a modal or redirect to a detail page
      alert('Therapist details view - therapist ID: ' + therapistId);
      // You could redirect to a detail page like: window.location.href = '/admin/therapists/' + therapistId;
    }
  });
});
</script>