<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-red-50 to-red-100">
    <div class="text-center max-w-md mx-auto px-6">
        <!-- Error Icon -->
        <div class="mb-8">
            <div class="w-32 h-32 mx-auto bg-red-100 rounded-full flex items-center justify-center">
                <i class="fas fa-exclamation-triangle text-4xl text-red-500"></i>
            </div>
        </div>
        
        <!-- Error Message -->
        <h1 class="text-4xl font-bold text-red-600 mb-4">Oops!</h1>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Something went wrong</h2>
        
        <div class="bg-white rounded-lg p-4 mb-6 border border-red-200">
            <p class="text-gray-700 text-sm">
                <% if (typeof error !== 'undefined' && error) { %>
                    <%= error %>
                <% } else { %>
                    An unexpected error occurred. Please try again later.
                <% } %>
            </p>
            
            <% if (typeof status !== 'undefined' && status) { %>
                <p class="text-xs text-gray-500 mt-2">Error Code: <%= status %></p>
            <% } %>
        </div>
        
        <!-- Action Buttons -->
        <div class="space-y-3">
            <button onclick="window.location.reload()" class="btn-primary inline-flex items-center">
                <i class="fas fa-redo mr-2"></i>
                Try Again
            </button>
            
            <a href="/" class="btn-secondary inline-flex items-center">
                <i class="fas fa-home mr-2"></i>
                Go Home
            </a>
            
            <% if (user) { %>
                <div class="mt-4">
                    <% if (user.role === 'patient') { %>
                        <a href="/dashboard" class="text-primary hover:text-primary/80 text-sm">
                            Back to Dashboard
                        </a>
                    <% } else if (user.role === 'therapist') { %>
                        <a href="/therapist" class="text-primary hover:text-primary/80 text-sm">
                            Back to Therapist Dashboard
                        </a>
                    <% } else if (user.role === 'admin') { %>
                        <a href="/admin" class="text-primary hover:text-primary/80 text-sm">
                            Back to Admin Panel
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
        
        <!-- Contact Support -->
        <div class="mt-12 pt-8 border-t border-red-200">
            <p class="text-sm text-gray-600 mb-2">Need help?</p>
            <a href="/contact" class="text-red-600 hover:text-red-700 text-sm font-medium">
                Contact Support
            </a>
        </div>
    </div>
</div>