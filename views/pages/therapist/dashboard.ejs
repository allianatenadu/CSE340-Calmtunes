<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-3xl md:text-4xl font-bold text-textMain mb-4">
      üë©‚Äç‚öïÔ∏è Therapist Dashboard
    </h1>
    <p class="text-lg text-gray-600">
      Welcome, <%= user ? user.name : "Therapist" %>! Manage your profile and practice here.
    </p>
  </div>

  <!-- Flash Messages -->
  <% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (typeof error !== 'undefined' && error.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
      <%= error[0] %>
    </div>
  <% } %>

  <!-- Application Status Card -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="lg:col-span-2">
      <div class="card">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-semibold text-textMain">Application Status</h2>
          <% if (application && application.status) { %>
            <span class="px-3 py-1 rounded-full text-sm font-medium 
              <%= application.status === 'approved' ? 'bg-green-100 text-green-800' : 
                  application.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                  'bg-red-100 text-red-800' %>">
              <%= application.status.charAt(0).toUpperCase() + application.status.slice(1) %>
            </span>
          <% } else { %>
            <span class="px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              Not Applied
            </span>
          <% } %>
        </div>

        <% if (!application || !application.application_id) { %>
          <!-- No Application Yet -->
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-file-medical text-2xl text-blue-600"></i>
            </div>
            <h3 class="text-lg font-medium text-textMain mb-2">Ready to Join Our Team?</h3>
            <p class="text-gray-600 mb-6">Submit your application to become a verified therapist on our platform.</p>
            <a href="/therapist/apply" class="btn-primary">
              <i class="fas fa-plus mr-2"></i>Apply Now
            </a>
          </div>

        <% } else if (application.status === 'pending') { %>
          <!-- Pending Application -->
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-clock text-yellow-600 text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-textMain">Application Under Review</h3>
                <p class="text-sm text-gray-600">Submitted on <%= new Date(application.created_at).toLocaleDateString() %></p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              Your application has been successfully submitted and is currently being reviewed by our admin team. 
              You'll receive a notification once a decision has been made.
            </p>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="font-medium">Resume:</span> 
                <span class="text-green-600"><i class="fas fa-check mr-1"></i>Uploaded</span>
              </div>
              <div>
                <span class="font-medium">Certifications:</span> 
                <span class="<%= application.certification_file ? 'text-green-600' : 'text-gray-500' %>">
                  <i class="fas fa-<%= application.certification_file ? 'check' : 'times' %> mr-1"></i>
                  <%= application.certification_file ? 'Uploaded' : 'Not uploaded' %>
                </span>
              </div>
            </div>
          </div>

        <% } else if (application.status === 'approved') { %>
          <!-- Approved Application -->
          <div class="bg-green-50 border border-green-200 rounded-lg p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-check-circle text-green-600 text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-textMain">Welcome to Our Team!</h3>
                <p class="text-sm text-gray-600">Approved on <%= new Date(application.updated_at).toLocaleDateString() %></p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              Congratulations! Your application has been approved. You are now a verified therapist on our platform and can start accepting patients.
            </p>
            <div class="flex space-x-4">
              <a href="/therapist/patients" class="btn-primary">
                <i class="fas fa-users mr-2"></i>View Patients
              </a>
              <a href="/therapist/profile" class="btn-secondary">
                <i class="fas fa-user-edit mr-2"></i>Edit Profile
              </a>
            </div>
          </div>

        <% } else if (application.status === 'rejected') { %>
          <!-- Rejected Application -->
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-times-circle text-red-600 text-xl"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-textMain">Application Not Approved</h3>
                <p class="text-sm text-gray-600">Reviewed on <%= new Date(application.updated_at).toLocaleDateString() %></p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">
              Unfortunately, your application was not approved at this time. You may reapply after reviewing our requirements.
            </p>
            <a href="/therapist/apply" class="btn-primary">
              <i class="fas fa-redo mr-2"></i>Reapply
            </a>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Quick Actions Sidebar -->
    <div class="space-y-6">
      <!-- Profile Card -->
      <div class="card">
        <div class="text-center">
          <% if (application && application.profile_image) { %>
            <img src="/uploads/<%= application.profile_image %>" alt="Profile" class="w-20 h-20 rounded-full mx-auto mb-3 object-cover border-4 border-primary">
          <% } else { %>
            <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-3 flex items-center justify-center">
              <i class="fas fa-user text-2xl text-gray-500"></i>
            </div>
          <% } %>
          <h3 class="font-semibold text-textMain"><%= user.name %></h3>
          <p class="text-sm text-gray-600 mb-3"><%= user.email %></p>
          <% if (user.role === 'therapist') { %>
            <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Verified Therapist</span>
          <% } else { %>
            <span class="px-2 py-1 bg-gray-100 text-gray-800 text-xs rounded-full">Applicant</span>
          <% } %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <h3 class="text-lg font-semibold text-textMain mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <% if (user.role === 'therapist') { %>
            <a href="/therapist/patients" class="block w-full text-left p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
              <i class="fas fa-users text-blue-600 mr-3"></i>
              <span class="font-medium">My Patients</span>
            </a>
            <a href="/therapist/schedule" class="block w-full text-left p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
              <i class="fas fa-calendar text-green-600 mr-3"></i>
              <span class="font-medium">Schedule</span>
            </a>
            <a href="/therapist/profile" class="block w-full text-left p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors">
              <i class="fas fa-user-edit text-purple-600 mr-3"></i>
              <span class="font-medium">Edit Profile</span>
            </a>
          <% } else if (!application || application.status === 'rejected') { %>
            <a href="/therapist/apply" class="block w-full text-left p-3 bg-primary/10 hover:bg-primary/20 rounded-lg transition-colors">
              <i class="fas fa-file-medical text-primary mr-3"></i>
              <span class="font-medium">Apply Now</span>
            </a>
          <% } %>
          <a href="/dashboard" class="block w-full text-left p-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors">
            <i class="fas fa-home text-gray-600 mr-3"></i>
            <span class="font-medium">Main Dashboard</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics (for approved therapists) -->
  <% if (user.role === 'therapist') { %>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="card text-center">
      <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-3">
        <i class="fas fa-users text-xl text-blue-600"></i>
      </div>
      <h3 class="text-2xl font-bold text-textMain">12</h3>
      <p class="text-gray-600">Active Patients</p>
    </div>
    <div class="card text-center">
      <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
        <i class="fas fa-calendar-check text-xl text-green-600"></i>
      </div>
      <h3 class="text-2xl font-bold text-textMain">8</h3>
      <p class="text-gray-600">This Week</p>
    </div>
    <div class="card text-center">
      <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-3">
        <i class="fas fa-star text-xl text-purple-600"></i>
      </div>
      <h3 class="text-2xl font-bold text-textMain">4.8</h3>
      <p class="text-gray-600">Rating</p>
    </div>
    <div class="card text-center">
      <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-3">
        <i class="fas fa-clock text-xl text-yellow-600"></i>
      </div>
      <h3 class="text-2xl font-bold text-textMain">120</h3>
      <p class="text-gray-600">Total Hours</p>
    </div>
  </div>
  <% } %>
</div>