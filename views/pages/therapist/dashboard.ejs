<!-- Therapist dashboard page content for therapist layout -->
<div class="space-y-6 sm:space-y-8">
  <!-- Welcome Header -->
  <div>
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-base sm:text-lg text-gray-600 mt-1">Welcome back, <%= user.name.split(' ')[0] %>!</p>
  </div>

  <!-- Rest of your dashboard content... -->
</div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 lg:gap-8">
    <!-- Left Column - Main Content -->
    <div class="lg:col-span-2 space-y-6 lg:space-y-8">
      <!-- Application Progress -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Application Progress</h2>
          <span class="text-sm text-gray-500">Profile Completion</span>
        </div>
        <div class="mb-4">
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-medium text-gray-700"><%= application ? '100%' : '0%' %></span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full <%= application ? 'w-full' : '' %>"></div>
          </div>
        </div>
        <p class="text-sm text-gray-600">Complete your profile to get access to all features.</p>
      </div>

      <!-- Practice Statistics -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Practice Statistics</h2>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
          <!-- Active Patients -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-3xl font-bold text-gray-900 mb-2"><%= stats ? stats.activePatients : 0 %></div>
            <div class="text-sm font-medium text-gray-600">Active Patients</div>
          </div>

          <!-- Sessions This Week -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-3xl font-bold text-gray-900 mb-2"><%= stats ? stats.weekSessions : 0 %></div>
            <div class="text-sm font-medium text-gray-600">Sessions This Week</div>
          </div>

          <!-- Average Rating -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-3xl font-bold text-gray-900 mb-2"><%= stats ? stats.avgRating.toFixed(1) : '0.0' %></div>
            <div class="text-sm font-medium text-gray-600">Average Rating</div>
            <div class="flex items-center justify-center mt-2">
              <% for (let i = 0; i < 5; i++) { %>
                <i class="fas fa-star text-yellow-400 text-sm <%= i < (stats ? Math.floor(stats.avgRating) : 0) ? '' : 'text-gray-300' %>"></i>
              <% } %>
            </div>
          </div>

          <!-- Total Hours -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-3xl font-bold text-gray-900 mb-2"><%= stats ? stats.totalHours : 0 %></div>
            <div class="text-sm font-medium text-gray-600">Total Hours Logged</div>
          </div>
        </div>

        <!-- Additional Stats Row -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-6 mt-6">
          <!-- Monthly Estimates -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-2xl font-bold text-gray-900 mb-1"><%= stats ? stats.monthlyEstimates : 0 %></div>
            <div class="text-sm font-medium text-gray-600">Monthly Estimates</div>
          </div>

          <!-- Patient Satisfaction -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-2xl font-bold text-green-600 mb-1"><%= stats ? stats.patientSatisfaction + '%' : '0%' %></div>
            <div class="text-sm font-medium text-gray-600">Patient Satisfaction</div>
          </div>

          <!-- Avg Response Time -->
          <div class="stats-card rounded-xl p-6 text-center">
            <div class="text-2xl font-bold text-blue-600 mb-1"><%= stats ? stats.avgResponseTime : '0hr' %></div>
            <div class="text-sm font-medium text-gray-600">Avg. Response Time</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column - Quick Actions -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="quick-action-card rounded-xl p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <!-- Notifications -->
          <a href="/notifications" class="flex items-center justify-between p-3 bg-orange-50 hover:bg-orange-100 rounded-lg transition-colors">
            <div class="flex items-center">
              <i class="fas fa-bell text-orange-600 mr-3"></i>
              <span class="font-medium text-gray-900">Notifications</span>
            </div>
            <span class="bg-orange-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">3</span>
          </a>

          <!-- Manage Patients -->
          <a href="/therapist/patients" class="block w-full text-left p-3 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
            <i class="fas fa-users text-blue-600 mr-3"></i>
            <span class="font-medium text-gray-900">Manage Patients</span>
          </a>

          <!-- Manage Schedule -->
          <a href="/therapist/schedule" class="block w-full text-left p-3 bg-green-50 hover:bg-green-100 rounded-lg transition-colors">
            <i class="fas fa-calendar-alt text-green-600 mr-3"></i>
            <span class="font-medium text-gray-900">Manage Schedule</span>
          </a>

          <!-- Edit Profile -->
          <a href="/account" class="block w-full text-left p-3 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors">
            <i class="fas fa-user-edit text-purple-600 mr-3"></i>
            <span class="font-medium text-gray-900">Edit Profile</span>
          </a>

          <!-- Browse Available Patients -->
          <a href="/find-therapist" class="block w-full text-center p-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium">
            <i class="fas fa-search mr-2"></i>
            Browse Available Patients
          </a>
        </div>
      </div>
    </div>
  </div>

</div>
