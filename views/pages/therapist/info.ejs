<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mr-4">
          <i class="fas fa-user text-white text-2xl"></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= patient.name %></h1>
          <p class="text-gray-600"><%= patient.email %></p>
        </div>
      </div>
      <div class="flex space-x-3">
        <a href="/therapist/patients" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          <i class="fas fa-arrow-left mr-2"></i>Back to Patients
        </a>
        <a href="/appointments/chat?patient=<%= patient.id %>" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          <i class="fas fa-comments mr-2"></i>Chat
        </a>
        <a href="/therapist/schedule?patient=<%= patient.id %>" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          <i class="fas fa-calendar-plus mr-2"></i>Schedule
        </a>
      </div>
    </div>
  </div>

  <!-- Patient Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-center mb-4">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
          <i class="fas fa-calendar text-blue-600"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900"><%= appointments.length %></h3>
          <p class="text-sm text-gray-600">Total Sessions</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-center mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-3">
          <i class="fas fa-star text-green-600"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900"><%= upcomingAppointments %></h3>
          <p class="text-sm text-gray-600">Upcoming</p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-center mb-4">
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
          <i class="fas fa-chart-line text-orange-600"></i>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900"><%= moodEntries.length %></h3>
          <p class="text-sm text-gray-600">Mood Entries</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Appointments Section -->
  <section class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center">
        <i class="fas fa-calendar mr-2 text-blue-500"></i>
        Appointment History
      </h2>
    </div>
    <div class="p-6">
      <% if (appointments.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% appointments.forEach(appointment => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= new Date(appointment.appointment_date).toLocaleDateString() %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= new Date('2000-01-01 ' + appointment.appointment_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= appointment.session_type === 'video' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                      <%= appointment.session_type %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= appointment.status === 'confirmed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= appointment.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900">
                    <%= appointment.notes || 'No notes' %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-calendar-times text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No appointments yet</p>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Mood Tracker Section -->
  <section class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
    <div class="p-6 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900 flex items-center">
        <i class="fas fa-mood-bad mr-2 text-purple-500"></i>
        Mood Tracker
      </h2>
    </div>
    <div class="p-6">
      <% if (moodEntries.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
          <% moodEntries.forEach(entry => { %>
            <div class="bg-purple-50 rounded-lg p-4">
              <div class="text-sm text-purple-800 font-medium"><%= new Date(entry.date).toLocaleDateString() %></div>
              <div class="text-2xl font-bold text-purple-600"><%= entry.mood %></div>
              <div class="text-xs text-purple-700 mt-1"><%= entry.notes || 'No notes' %></div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-chart-line text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No mood entries yet</p>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Fixed Drawings Section -->
<section class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900 flex items-center">
      <i class="fas fa-paint-brush mr-2 text-red-500"></i>
      Art Therapy Drawings
    </h2>
  </div>
  <div class="p-6">
    <% if (drawings.length > 0) { %>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% drawings.forEach(drawing => { %>
          <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden relative">
            <img src="data:image/png;base64,<%= drawing.image_data %>" 
                 alt="Patient artwork" 
                 class="w-full h-full object-cover">
            <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white p-2">
              <div class="text-xs">
                <%= new Date(drawing.created_at).toLocaleDateString() %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="text-center py-8">
        <i class="fas fa-paint-brush text-gray-400 text-4xl mb-4"></i>
        <p class="text-gray-600">No drawings yet</p>
      </div>
    <% } %>
  </div>
</section>

  <!-- Music Preferences Section -->
<section class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900 flex items-center">
      <i class="fas fa-music mr-2 text-green-500"></i>
      Music Therapy Preferences
    </h2>
  </div>
  <div class="p-6">
    <% if (musicPreferences && musicPreferences.length > 0) { %>
      <div class="space-y-4">
        <% musicPreferences.forEach((pref, index) => { %>
          <div class="flex items-center justify-between bg-green-50 rounded-lg p-4">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center mr-3 text-sm font-bold">
                <%= index + 1 %>
              </div>
              <div>
                <div class="font-medium text-green-800 capitalize"><%= pref.category.replace('_', ' ') %></div>
                <div class="text-sm text-green-600">
                  Last played: <%= new Date(pref.last_played).toLocaleDateString() %>
                </div>
              </div>
            </div>
            <div class="text-right">
              <div class="text-lg font-bold text-green-700"><%= pref.play_count %></div>
              <div class="text-xs text-green-600">sessions</div>
            </div>
          </div>
        <% }); %>
      </div>
      
      <!-- Most Preferred Category Highlight -->
      <% if (musicPreferences[0]) { %>
        <div class="mt-6 p-4 bg-gradient-to-r from-green-100 to-blue-100 rounded-lg border border-green-200">
          <h4 class="font-semibold text-green-800 mb-2 flex items-center">
            <i class="fas fa-star mr-2"></i> Most Preferred Category
          </h4>
          <div class="text-lg font-bold text-green-700 capitalize">
            <%= musicPreferences[0].category.replace('_', ' ') %>
          </div>
          <div class="text-sm text-green-600">
            <%= musicPreferences[0].play_count %> listening sessions
          </div>
        </div>
      <% } %>
      
    <% } else { %>
      <div class="text-center py-8">
        <i class="fas fa-headphones text-gray-400 text-4xl mb-4"></i>
        <p class="text-gray-600">No music preferences recorded yet</p>
        <p class="text-sm text-gray-500 mt-2">Patient hasn't used music therapy features</p>
      </div>
    <% } %>
  </div>
</section>`

  <!-- Improved Panic Sessions Section -->
<section class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
  <div class="p-6 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900 flex items-center">
      <i class="fas fa-heartbeat mr-2 text-red-500"></i>
      Panic Sessions
    </h2>
  </div>
  <div class="p-6">
    <% if (panicSessions && panicSessions.length > 0) { %>
      <div class="space-y-6">
        <% panicSessions.forEach(session => { %>
          <div class="bg-gray-50 rounded-lg p-6">
            <!-- Session Header -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <i class="fas fa-heartbeat text-red-500 mr-3 text-lg"></i>
                <div>
                  <h3 class="font-semibold text-gray-800">
                    Session <%= session.session_id ? session.session_id.slice(-8) : 'Unknown' %>
                  </h3>
                  <p class="text-sm text-gray-600">
                    <%= new Date(session.start_time).toLocaleDateString() %> at <%= new Date(session.start_time).toLocaleTimeString() %>
                    <% if (session.duration_formatted) { %>
                      • <%= session.duration_formatted %>
                    <% } %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="px-2 py-1 text-xs rounded-full <%= session.breathing_used ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                  <i class="fas fa-lungs mr-1"></i><%= session.breathing_used ? 'Breathing Used' : 'No Breathing' %>
                </span>
                <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">
                  <%= session.trigger_method_formatted || 'Manual' %>
                </span>
              </div>
            </div>

            <!-- Session Notes -->
            <% if (session.session_notes) { %>
              <div class="mb-4">
                <h4 class="font-medium text-gray-800 mb-2">Session Notes:</h4>
                <p class="text-sm text-gray-700 bg-white rounded p-3 border-l-4 border-blue-400">
                  <%= session.session_notes %>
                </p>
              </div>
            <% } %>

            <!-- Emergency Contacts Used -->
            <% if (session.emergency_contacts_processed && session.emergency_contacts_processed.length > 0) { %>
              <div class="mb-4">
                <h4 class="font-medium text-gray-800 mb-2">Emergency Contacts Used:</h4>
                <div class="flex flex-wrap gap-2">
                  <% session.emergency_contacts_processed.forEach(contact => { %>
                    <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full">
                      <i class="fas fa-phone mr-1"></i><%= contact.name || contact.number %>
                    </span>
                  <% }); %>
                </div>
              </div>
            <% } %>

            <!-- Audio Recordings -->
            <% if (session.audio_recordings_processed && session.audio_recordings_processed.length > 0) { %>
              <div class="bg-white rounded-lg p-4 mb-4">
                <h4 class="font-medium text-gray-800 mb-3 flex items-center">
                  <i class="fas fa-headphones mr-2 text-indigo-600"></i>
                  Audio Recordings
                  <span class="ml-2 text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full">
                    <%= session.audio_recordings_processed.length %> file<%= session.audio_recordings_processed.length !== 1 ? 's' : '' %>
                  </span>
                </h4>

                <div class="space-y-3">
                  <% session.audio_recordings_processed.forEach((recording, index) => { %>
                    <div class="bg-gray-50 rounded-lg p-4">
                      <div class="flex items-center justify-between mb-3">
                        <div class="flex items-center">
                          <i class="fas fa-file-audio text-indigo-600 mr-3 text-lg"></i>
                          <div>
                            <p class="text-sm font-medium text-gray-800">
                              Recording <%= index + 1 %>
                            </p>
                            <p class="text-xs text-gray-600">
                              Duration: <%= recording.durationFormatted %> •
                              Size: <%= Math.round(recording.size / 1024) %>KB •
                              <%= new Date(recording.timestamp).toLocaleTimeString() %>
                            </p>
                          </div>
                        </div>

                        <% if (recording.url) { %>
                          <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">
                            <i class="fas fa-check-circle mr-1"></i>Available
                          </span>
                        <% } else { %>
                          <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full">
                            <i class="fas fa-exclamation-triangle mr-1"></i>Processing
                          </span>
                        <% } %>
                      </div>

                      <!-- Audio Player -->
                      <% if (recording.url) { %>
                        <div class="bg-white rounded border p-3">
                          <audio controls preload="metadata" class="w-full">
                            <source src="/panic<%= recording.url %>" type="audio/webm">
                            <source src="/panic<%= recording.url %>" type="audio/mp4">
                            Your browser does not support the audio element.
                          </audio>
                          <div class="flex items-center justify-between mt-2 text-xs text-gray-500">
                            <span>Session: <%= recording.sessionId || session.session_id %></span>
                            <span>Recording ID: <%= recording.id %></span>
                          </div>
                        </div>
                      <% } else { %>
                        <div class="bg-yellow-50 border border-yellow-200 rounded p-3 text-center">
                          <i class="fas fa-hourglass-half text-yellow-600 mb-1"></i>
                          <p class="text-sm text-yellow-800">Audio file not available</p>
                          <p class="text-xs text-yellow-600">The recording may still be processing or was not properly saved</p>
                        </div>
                      <% } %>
                    </div>
                  <% }); %>
                </div>

                <div class="mt-4 p-3 bg-blue-50 rounded-lg">
                  <div class="flex items-start">
                    <i class="fas fa-shield-alt text-blue-600 mr-2 mt-0.5"></i>
                    <div class="text-sm">
                      <p class="text-blue-800 font-medium">Privacy & Security:</p>
                      <p class="text-blue-700">
                        Audio recordings are stored securely and only accessible by the patient and their assigned therapist.
                        These recordings help provide context for therapy sessions and track progress over time.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="text-center py-8">
        <i class="fas fa-heartbeat text-gray-400 text-4xl mb-4"></i>
        <p class="text-gray-600">No panic sessions recorded yet</p>
        <p class="text-sm text-gray-500 mt-2">Patient hasn't used panic support features</p>
      </div>
    <% } %>
  </div>
</section>
</div>

<script>
  // Load drawings on canvas
  document.addEventListener('DOMContentLoaded', function() {
    const canvases = document.querySelectorAll('canvas[data-drawing]');
    canvases.forEach(canvas => {
      const drawingData = canvas.dataset.drawing;
      if (drawingData) {
        const ctx = canvas.getContext('2d');
        const img = new Image();
        img.onload = () => {
          ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
        };
        img.src = drawingData;
      }
    });
  });
</script>