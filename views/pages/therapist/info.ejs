<script>
  // Tab functionality
  function showTab(tabName) {
    // Hide all tab contents
    const tabContents = document.querySelectorAll('.tab-content');
    tabContents.forEach(content => {
      content.style.display = 'none';
    });

    // Remove active class from all tabs
    const tabButtons = document.querySelectorAll('.tab-button');
    tabButtons.forEach(button => {
      button.classList.remove('border-blue-500', 'text-blue-600');
      button.classList.add('border-transparent', 'text-gray-500');
    });

    // Show selected tab content
    let selectedContent;
    if (tabName === 'overview') {
      // For overview tab, show both overview cards and patient summary
      const overviewCardsContent = document.getElementById('overview-cards-content');
      const overviewSummaryContent = document.getElementById('overview-content');
      if (overviewCardsContent) overviewCardsContent.style.display = 'block';
      if (overviewSummaryContent) overviewSummaryContent.style.display = 'block';
    } else {
      selectedContent = document.getElementById(tabName + '-content');
      if (selectedContent) {
        selectedContent.style.display = 'block';
      }
    }

    // Add active class to selected tab
    const selectedTab = document.getElementById(tabName + '-tab');
    if (selectedTab) {
      selectedTab.classList.remove('border-transparent', 'text-gray-500');
      selectedTab.classList.add('border-blue-500', 'text-blue-600');
    }
  }

  // Initialize page
  document.addEventListener('DOMContentLoaded', function() {
    console.log('Patient info page loaded successfully');
    showTab('overview'); // Show overview tab by default

    // Apply colors to color swatches
    applyColorSwatches();
  });

  // Helper function to get mood color classes (client-side version for dynamic updates)
  function getMoodColor(mood) {
    if (!mood || mood === 'Not recorded') return 'bg-gray-100 text-gray-600';

    const moodColors = {
      'very_stressed': 'bg-red-100 text-red-800',
      'stressed': 'bg-orange-100 text-orange-800',
      'neutral': 'bg-yellow-100 text-yellow-800',
      'calm': 'bg-green-100 text-green-800',
      'very_calm': 'bg-blue-100 text-blue-800'
    };

    return moodColors[mood] || 'bg-gray-100 text-gray-600';
  }

  // Function to apply colors to color swatches
  function applyColorSwatches() {
    const colorPalettes = document.querySelectorAll('.color-palette');

    colorPalettes.forEach(function(palette) {
      const colorsData = palette.getAttribute('data-colors');
      if (colorsData) {
        try {
          // Parse the colors data, handling escaped quotes
          const colorsText = colorsData.replace(/"/g, '"');
          const colors = JSON.parse(colorsText);

          const swatches = palette.querySelectorAll('.color-swatch');
          swatches.forEach(function(swatch, index) {
            const colorValue = swatch.getAttribute('data-color-value');
            const isInvalid = swatch.getAttribute('data-invalid');

            if (colorValue && !isInvalid) {
              // Validate and apply the color
              const trimmedColor = colorValue.trim();
              if (trimmedColor !== '' &&
                  (/^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$/.test(trimmedColor) ||
                   /^rgb[a]?\([^)]+\)$/.test(trimmedColor) ||
                   /^hsl[a]?\([^)]+\)$/.test(trimmedColor))) {
                swatch.style.backgroundColor = trimmedColor;
                swatch.setAttribute('title', trimmedColor);
              } else {
                swatch.style.backgroundColor = '#e5e7eb'; // gray-200
                swatch.setAttribute('title', trimmedColor + ' (invalid color)');
              }
            } else if (isInvalid) {
              swatch.style.backgroundColor = '#e5e7eb'; // gray-200
              swatch.setAttribute('title', colorValue + ' (invalid color)');
            }
          });
        } catch (error) {
          console.error('Error parsing color data:', error);
        }
      }
    });
  }
</script>
