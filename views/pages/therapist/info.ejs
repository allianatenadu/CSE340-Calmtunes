<!-- Patient info page content for therapist layout - Simplified Version -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
<style>
  .artwork-container {
    text-align: center;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f9fafb;
    border-radius: 8px;
  }

  .artwork-image {
    max-width: 100%;
    max-height: 400px;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .artwork-placeholder {
    text-align: center;
    color: #9ca3af;
    padding: 2rem;
  }

  .artwork-placeholder i {
    display: block;
    margin-bottom: 0.5rem;
  }

  /* Cute & Compact Artwork Display */
  .artwork-display-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
    background: linear-gradient(135deg, #fef7ff 0%, #f0f9ff 100%);
    border-radius: 16px;
    border: 2px solid #e0c3fc;
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 0 4px 15px rgba(224, 195, 252, 0.3);
  }

  .artwork-wrapper {
    position: relative;
    margin-bottom: 1rem;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .artwork-image-full {
    max-width: 100%;
    max-height: 350px;
    width: auto;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(139, 92, 246, 0.25);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 3px solid #ffffff;
  }

  .artwork-image-full:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 10px 30px rgba(139, 92, 246, 0.35);
  }

  .artwork-error {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, #fff7ed 0%, #fef3c7 100%);
    border-radius: 12px;
    border: 2px solid #fbbf24;
    box-shadow: 0 4px 15px rgba(251, 191, 36, 0.2);
  }

  .error-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .artwork-info {
    text-align: center;
    max-width: 100%;
  }

  .artwork-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #7c3aed;
    margin-bottom: 0.5rem;
    text-shadow: 0 1px 2px rgba(124, 58, 237, 0.1);
  }

  .artwork-date {
    font-size: 0.8rem;
    color: #6b7280;
    margin-bottom: 0.25rem;
    background: rgba(255, 255, 255, 0.7);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    display: inline-block;
  }

  .artwork-type {
    font-size: 0.8rem;
    color: #059669;
    font-weight: 500;
    background: rgba(16, 185, 129, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    display: inline-block;
  }

  .no-artwork-container {
    text-align: center;
    padding: 3rem 1.5rem;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-radius: 16px;
    border: 2px dashed #cbd5e1;
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0 4px 15px rgba(203, 213, 225, 0.3);
  }

  .no-artwork-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .no-artwork-content i {
    color: #9ca3af;
    margin-bottom: 1rem;
  }

  .no-artwork-content p {
    margin: 0.5rem 0;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .artwork-display-container {
      padding: 1.5rem;
    }

    .artwork-image-full {
      max-height: 300px;
    }

    .artwork-title {
      font-size: 1.125rem;
    }
  }

  /* Print styles */
  @media print {
    .artwork-image-full {
      max-height: 400px;
      page-break-inside: avoid;
    }

    .artwork-display-container {
      break-inside: avoid;
    }
  }
</style>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <div
          class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mr-4"
        >
          <i class="fas fa-user text-white text-2xl"></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= patient.name %></h1>
          <p class="text-gray-600"><%= patient.email %></p>
        </div>
      </div>
      <div class="flex space-x-3">
        <a
          href="/therapist/patients"
          class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
        >
          <i class="fas fa-arrow-left mr-2"></i>Back to Patients
        </a>
        <a
          href="/appointments/chat?patient=<%= patient.id %>"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
        >
          <i class="fas fa-comments mr-2"></i>Chat
        </a>
        <a
          href="/therapist/schedule?patient=<%= patient.id %>"
          class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors"
        >
          <i class="fas fa-calendar-plus mr-2"></i>Schedule
        </a>
      </div>
    </div>
  </div>

  <!-- Tab Navigation -->
  <div class="mb-8">
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button onclick="showTab('overview')" id="overview-tab" class="tab-button active whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm border-blue-500 text-blue-600">
          <i class="fas fa-user mr-2"></i>Overview
        </button>
        <button onclick="showTab('sessions')" id="sessions-tab" class="tab-button whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
          <i class="fas fa-calendar mr-2"></i>Session Log
        </button>
        <button onclick="showTab('mood')" id="mood-tab" class="tab-button whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
          <i class="fas fa-heart mr-2"></i>Mood Tracking
        </button>
        <button onclick="showTab('activities')" id="activities-tab" class="tab-button whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
          <i class="fas fa-palette mr-2"></i>Therapy Activities
        </button>
        <button onclick="showTab('panic')" id="panic-tab" class="tab-button whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
          <i class="fas fa-exclamation-triangle mr-2"></i>Panic Sessions
        </button>
      </nav>
    </div>
  </div>

  <!-- Tab Content -->
  <div id="overview-cards-content" class="tab-content">
    <!-- Patient Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-center mb-4">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
            <i class="fas fa-calendar text-blue-600"></i>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900"><%= appointments.length %></h3>
            <p class="text-sm text-gray-600">Total Sessions</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-center mb-4">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-3">
            <i class="fas fa-star text-green-600"></i>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900"><%= upcomingAppointments %></h3>
            <p class="text-sm text-gray-600">Upcoming Appointments</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Session Log Tab -->
  <div id="sessions-content" class="tab-content" style="display: none;">
    <section class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-calendar mr-2 text-blue-500"></i>
          Appointment History
        </h2>
      </div>
      <div class="p-6">
        <% if (appointments.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Notes</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% appointments.forEach(appointment => { %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= new Date(appointment.appointment_date).toLocaleDateString() %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= new Date('2000-01-01 ' + appointment.appointment_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= appointment.session_type === 'video' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                    <%= appointment.session_type %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= appointment.status === 'confirmed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= appointment.status %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= appointment.notes || 'No notes' %>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-calendar-times text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No appointments yet</p>
        </div>
        <% } %>
      </div>
    </section>
  </div>

  <!-- Mood Tracking Tab -->
  <div id="mood-content" class="tab-content" style="display: none;">
    <section class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-heart mr-2 text-purple-500"></i>
          Mood Tracking
        </h2>
      </div>
      <div class="p-6">
        <% if (typeof moodEntries !== 'undefined' && moodEntries.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
          <% moodEntries.forEach(entry => { %>
          <div class="bg-purple-50 rounded-lg p-4">
            <div class="text-sm text-purple-800 font-medium">
              <%= new Date(entry.entry_date).toLocaleDateString() %>
            </div>
            <div class="text-2xl font-bold text-purple-600">
              <%= entry.mood %>
            </div>
            <div class="text-xs text-purple-700 mt-1">
              <%= entry.note || 'No notes' %>
            </div>
          </div>
          <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-chart-line text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No mood entries yet</p>
          <p class="text-sm text-gray-500 mt-2">Mood tracking data not available</p>
        </div>
        <% } %>
      </div>
    </section>
  </div>

  <!-- Therapy Activities Tab -->
  <div id="activities-content" class="tab-content" style="display: none;">
    <div class="space-y-8">
      <!-- Art Therapy Section -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i class="fas fa-paint-brush mr-2 text-yellow-500"></i>
            Art Therapy (<%= typeof drawings !== 'undefined' ? drawings.length : 0 %> sessions)
          </h2>
        </div>
        <div class="p-6">
          <% if (typeof drawings !== 'undefined' && drawings.length > 0) { %>
          <div class="space-y-6">
            <% drawings.forEach((drawing, index) => { %>
            <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-6 border border-purple-200">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center">
                  <div class="w-10 h-10 bg-purple-500 text-white rounded-full flex items-center justify-center mr-3 text-sm font-bold">
                    <%= index + 1 %>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900"><%= drawing.session_name || 'Art Session' %></h3>
                    <p class="text-sm text-gray-600">
                      <%= new Date(drawing.session_date).toLocaleDateString() %> •
                      <%= drawing.duration ? drawing.duration + ' minutes' : 'Duration not recorded' %>
                    </p>
                  </div>
                </div>
                <div class="text-right">
                  <span class="px-2 py-1 text-xs rounded-full <%= drawing.is_completed ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= drawing.is_completed ? 'Completed' : 'In Progress' %>
                  </span>
                </div>
              </div>

              <!-- Patient Artwork Display -->
              <% if (drawing.image_data) { %>
              <div class="artwork-display-container">
                <div class="artwork-wrapper">
                  <img src="<%= drawing.artwork_image %>"
                       alt="Patient Artwork: <%= drawing.session_name || 'Art Therapy Session' %>"
                       class="artwork-image-full"
                       loading="lazy"
                       onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='block';">
                  <div class="artwork-error" style="display: none;">
                    <div class="error-content">
                      <i class="fas fa-exclamation-triangle text-yellow-500 text-3xl mb-2"></i>
                      <p class="text-gray-600 font-medium">Unable to load artwork</p>
                      <p class="text-gray-500 text-sm">The artwork data may be corrupted</p>
                    </div>
                  </div>
                </div>
                <div class="artwork-info">
                  <h4 class="artwork-title">Patient Artwork</h4>
                  <p class="artwork-date">Created: <%= new Date(drawing.artwork_date).toLocaleDateString() %></p>
                  <p class="artwork-type">Digital Art Session</p>
                </div>
              </div>
              <% } else { %>
              <div class="no-artwork-container">
                <div class="no-artwork-content">
                  <i class="fas fa-palette text-gray-400 text-4xl mb-3"></i>
                  <p class="text-gray-600 font-medium">No patient artwork found</p>
                  <p class="text-gray-500 text-sm">Patient hasn't created any artwork yet</p>
                </div>
              </div>
              <% } %>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <div class="text-center py-8">
            <i class="fas fa-paint-brush text-gray-400 text-4xl mb-4"></i>
            <p class="text-gray-600">No art therapy sessions yet</p>
            <p class="text-sm text-gray-500 mt-2">Art therapy data will appear here when patient completes sessions</p>
          </div>
          <% } %>
        </div>
      </section>

      <!-- Music Therapy Section -->
      <section class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            <i class="fas fa-music mr-2 text-green-500"></i>
            Music Therapy
          </h2>
        </div>
        <div class="p-6">
          <% if (typeof musicPreferences !== 'undefined' && musicPreferences.length > 0) { %>
          <div class="space-y-4">
            <% musicPreferences.forEach((pref, index) => { %>
            <div class="flex items-center justify-between bg-green-50 rounded-lg p-4">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-green-500 text-white rounded-full flex items-center justify-center mr-3 text-sm font-bold">
                  <%= index + 1 %>
                </div>
                <div>
                  <div class="font-medium text-green-800 capitalize">
                    <%= pref.category ? pref.category.replace('_', ' ') : 'Music Session' %>
                  </div>
                  <div class="text-sm text-green-600">
                    Last played: <%= new Date(pref.session_date).toLocaleDateString() %>
                  </div>
                </div>
              </div>
              <div class="text-right">
                <div class="text-lg font-bold text-green-700">
                  <%= pref.play_count || 1 %>
                </div>
                <div class="text-xs text-green-600">sessions</div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } else { %>
          <div class="text-center py-8">
            <i class="fas fa-headphones text-gray-400 text-4xl mb-4"></i>
            <p class="text-gray-600">No music preferences recorded yet</p>
            <p class="text-sm text-gray-500 mt-2">Music therapy data not available</p>
          </div>
          <% } %>
        </div>
      </section>
    </div>
  </div>

  <!-- Panic Sessions Tab -->
  <div id="panic-content" class="tab-content" style="display: none;">
    <section class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-heartbeat mr-2 text-red-500"></i>
          Panic Sessions
        </h2>
      </div>
      <div class="p-6">
        <% if (typeof panicSessions !== 'undefined' && panicSessions.length > 0) { %>
        <div class="space-y-6">
          <% panicSessions.forEach(session => { %>
          <div class="bg-gray-50 rounded-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center">
                <i class="fas fa-heartbeat text-red-500 mr-3 text-lg"></i>
                <div>
                  <h3 class="font-semibold text-gray-800">
                    Session <%= session.session_id ? session.session_id.slice(-8) : 'Unknown' %>
                  </h3>
                  <p class="text-sm text-gray-600">
                    <%= new Date(session.start_time).toLocaleDateString() %> at
                    <%= new Date(session.start_time).toLocaleTimeString() %>
                    <% if (session.duration_formatted) { %> • <%= session.duration_formatted %> <% } %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <span class="px-2 py-1 text-xs rounded-full <%= session.breathing_used ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                  <i class="fas fa-lungs mr-1"></i><%= session.breathing_used ? 'Breathing Used' : 'No Breathing' %>
                </span>
                <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800">
                  <%= session.trigger_method_formatted || 'Manual' %>
                </span>
              </div>
            </div>

            <% if (session.session_notes) { %>
            <div class="mb-4">
              <h4 class="font-medium text-gray-800 mb-2">Session Notes:</h4>
              <p class="text-sm text-gray-700 bg-white rounded p-3 border-l-4 border-blue-400">
                <%= session.session_notes %>
              </p>
            </div>
            <% } %>

            <% if (session.emergency_contacts_processed && session.emergency_contacts_processed.length > 0) { %>
            <div class="mb-4">
              <h4 class="font-medium text-gray-800 mb-2">Emergency Contacts Used:</h4>
              <div class="flex flex-wrap gap-2">
                <% session.emergency_contacts_processed.forEach(contact => { %>
                <span class="px-2 py-1 text-xs bg-red-100 text-red-800 rounded-full">
                  <i class="fas fa-phone mr-1"></i><%= contact.name || contact.number %>
                </span>
                <% }); %>
              </div>
            </div>
            <% } %>

            <% if (session.audio_recordings_processed && session.audio_recordings_processed.length > 0) { %>
            <div class="bg-white rounded-lg p-4 mb-4">
              <h4 class="font-medium text-gray-800 mb-3 flex items-center">
                <i class="fas fa-headphones mr-2 text-indigo-600"></i>
                Audio Recordings
                <span class="ml-2 text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded-full">
                  <%= session.audio_recordings_processed.length %> file<%= session.audio_recordings_processed.length !== 1 ? 's' : '' %>
                </span>
              </h4>
              <div class="space-y-3">
                <% session.audio_recordings_processed.forEach((recording, index) => { %>
                <div class="bg-gray-50 rounded-lg p-4">
                  <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center">
                      <i class="fas fa-file-audio text-indigo-600 mr-3 text-lg"></i>
                      <div>
                        <p class="text-sm font-medium text-gray-800">Recording <%= index + 1 %></p>
                        <p class="text-xs text-gray-600">
                          Duration: <%= recording.durationFormatted %> • Size: <%= Math.round(recording.size / 1024) %>KB
                        </p>
                      </div>
                    </div>
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">
                      <i class="fas fa-check-circle mr-1"></i>Available
                    </span>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
            <% } %>
          </div>
          <% }); %>
        </div>
        <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-heartbeat text-gray-400 text-4xl mb-4"></i>
          <p class="text-gray-600">No panic sessions recorded yet</p>
          <p class="text-sm text-gray-500 mt-2">Panic session data not available</p>
        </div>
        <% } %>
      </div>
    </section>
  </div>

  <!-- Patient Summary (Overview Tab) -->
  <div id="overview-content" class="tab-content">
    <section class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-info-circle mr-2 text-gray-500"></i>
          Patient Summary
        </h2>
      </div>
      <div class="p-6">
